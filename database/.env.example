# MongoDB Authentication
MONGO_ADMIN_USER=time-capsule-admin
MONGO_ADMIN_PASSWORD=your-secure-password-here

# MongoDB Database
MONGO_DATABASE=time-capsule

# MongoDB Connection
MONGODB_URI="mongodb://time-capsule-admin:your-secure-password-here@localhost:27017/time-capsule?authSource=admin&readPreference=secondaryPreferred"

# MongoDB Replica Set Names
MONGO_CONFIG_REPLICA_SET=mongo-config-rs
MONGO_SHARD1_REPLICA_SET=mongo-shard-01-rs
MONGO_SHARD2_REPLICA_SET=mongo-shard-02-rs
MONGO_SHARD3_REPLICA_SET=mongo-shard-03-rs
