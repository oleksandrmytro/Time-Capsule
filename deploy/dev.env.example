# JWT / Security
SECURITY_JWT_SECRET_KEY=change-me-base64
SECURITY_JWT_EXPIRATION_TIME=86400000

# Mail
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
